
<div style="float:right;padding-bottom:10px;padding-right:20px;">
    <%= link_to 'Add New', new_vehicle_path , {:class=>'selectedlink'}%>
</div>

<tr>
	<td width="100%" style="border:1px solid #D2D2D2;">
		<table width="100%">
			<tr class="td-light">
			  <th class="th_header" width="30%">
			    <div style="padding-left: 15px;width: 50px;"><label><b>Name</b></label></div>
			  </th>
			  <th class="th_header" width="40%">
			    <div style="padding-left: 15px;width: 140px;"><label><b>Description</b></label></div>
			  </th>
			  <th  style="width: 10%;text-align:center" class="th_header" >
			    <label><b>Status</b></label>
			  </th>
			  <th class="th_header" style="text-align:center;width: 10%;"><div align="center">Edit</div></th>
			  <th class="th_header" style="text-align:center;width: 10%;"><div align="center">Delete</div></th>
			</tr>
			
			<% @vehicles.each do |vehicle| %>
			  <tr class="<%= cycle('td-light','td-dark') %>">
			    <td style="padding-left: 15px;" class="td-listing">
			      <%= vehicle.name %>
			    </td>
			    <td style="padding-left: 15px;" class="td-listing">
			      <%= vehicle.description %>
			    </td>
			    <td class="td-listing" style="text-align:center;">
			      <% if vehicle.status == true %> 
			        <%=image_tag("icon-active.gif", :border => 0 )%>
			      <% else %>
			        <%=image_tag("icon-inactive.gif", :border => 0 )%>
			      <% end %>
			    </td>
			    <td style="padding-left: 15px;text-align:center" class="td-listing" >
			      <%= link_to image_tag("app-edit-icon.png", :border => 0 , :size => "20x20"), edit_vehicle_path(vehicle.id) %>
			    </td>
			    <td style="padding-left: 15px;text-align:center" class="td-listing" >
			      <%= link_to image_tag("app-delete-icon.png", :border => 0 , :size => "20x20"), vehicle_path(vehicle.id), :method => "delete", :confirm => "Are you sure you want to delete this vehicle?" %>
			    </td>
			  </tr>
			<% end %>
			<tr class="td-light">
				<td colspan="5" class="td-listing">
					<div class='digg_pagination'>
						<%= will_paginate @vehicles %>
					</div>
				</td>
			</tr>
			
		</table>
	</td>
</tr>